<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    android:weightSum="1"

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="41%"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/imu_text"
                style="@android:style/Widget.DeviceDefault.EditText"
                app:layout_widthPercent="38%"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_marginBottomPercent="4%"
                app:layout_marginTopPercent="4%"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="IMU"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:layout_marginStart="26dp"
                android:textSize="@dimen/listTextSize"
                android:textColorHint="#000000"
                />

            <View
                android:id="@+id/line"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/imu_text"
                android:background="#000000" />

            <ListView
                android:id="@+id/listViewIMU"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@id/line"
                android:layout_alignParentStart="true" />

        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="0dp"
        android:text="0Â°"
        android:textAlignment="center"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/horizon_sphere"
        android:layout_width="232dp"
        android:layout_height="209dp"
        android:layout_below="@+id/txt_result"
        android:layout_alignParentLeft="true"

        app:srcCompat="@drawable/horizon_sphere" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="228dp"
        android:layout_height="213dp"
        android:layout_below="@+id/txt_result"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/horizon_face" />

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/graph"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_result" />
</android.support.percent.PercentRelativeLayout>

